{% setcontent block = (content) returnsingle %}

{% if visible %}
    <!-- Section Grid
    ============================================= -->
    <div id="section-request" class="section my-0 my-lg-5">
        <div class="container">
            <div class="row g-0 align-items-md-stretch align-items-lg-center">
                <div class="col-xl-7 col-md-6 img-overlap">
                    <img src="{{block.image|thumbnail(960,640,fit='crop')}}" alt="..." class="h-100" style="object-fit: cover;">
                </div>

                <div class="col-xl-5 col-md-6 bg-white">
                    {# <div class="position-absolute start-0 top-0 w-100 h-100 bg-color bg-opacity-10"></div> #}
                    <p class="color op-06 text-uppercase ls-4 small mb-3">{{block.subtitle}}</p>
                    <h2 class="display-6">{{block.title}}</h2>
                    <p class="color">{{block.content}}</p>
                    {# <a href="#" class="button button-small border-color button-border m-0 color h-bg-color h-text-light">Learn More</a> #}
                    {{ boltform('quotation') }}
                </div>
            </div>
        </div>

    </div>
{% endif %}
