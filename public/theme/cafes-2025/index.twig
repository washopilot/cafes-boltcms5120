{% extends 'partials/_master.twig' %}
{% setcontent settings = 'settings'  %}

{% block main %}

    {% if settings is not null %}
        {% include 'partials/_top_bar.twig' with {block: settings.top_bar} %}
    {% endif %}

    {% include 'partials/_header.twig' %}

    {% if record.slider_collection is not null %}
        {% include 'partials/_slider_section.twig' with {sliders: record.slider_collection, visible: record.slider_visibility} %}
    {% endif %}

    {% if record.slider_below is not null %}
        {% include 'partials/_below_slider.twig' with {slider_below: record.slider_below} %}
    {% endif %}

    {% if record.sections_home is not null %}
        {% include 'partials/_index_content.twig' with {sections: record.sections_home} %}
    {% endif %}

    {% include 'partials/_footer.twig' %}

{% endblock main %}
